    "simple-git": "^3.0.0",
    "ioredis": "^5.0.0",
    "pg": "^8.0.0",
    "drizzle-orm": "^0.29.0",
    "zod": "^3.0.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.0.0",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.0.0",
    "tsup": "^8.0.0"
